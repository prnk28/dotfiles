{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "yamlfmt": {
      "command": ["yamlfmt", "-w"],
      "extensions": ["yaml", "yml"]
    }
  },
  "theme": "cyberdream",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/code-supernova",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "devbox_": true,
        "mcp_context7": true,
        "mcp_exa": false,
        "mcp_deepgraph": false,
      } 
    },
    "plan": {
      "mode": "primary",
      "model": "opencode/grok-code",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "mcp_context7": false,
        "mcp_exa": true,
        "mcp_deepgraph": true,
      } 
    },
  },
  "mcp": {
    "chrome": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "deepgraph-sonr": {
      "type": "local",
      "command": ["npx", "-y", "mcp-code-graph@latest", "sonr-io/sonr"],
      "enabled": false
    },
    "deepgraph-crypto": {
      "type": "local",
      "command": ["npx", "-y", "mcp-code-graph@latest", "sonr-io/crypto"],
      "enabled": false
    },
    "deepgraph-motr": {
      "type": "local",
      "command": ["npx", "-y", "mcp-code-graph@latest", "sonr-io/motr"],
      "enabled": false
    },
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.exa.ai/mcp"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": false
    },
    "godoc": {
      "type": "local",
      "command": ["/home/prad/.go/bin/godoc-mcp"],
      "enabled": false,
      "environment": {
        "GOPATH": "/home/prad/.go",
        "GOMODCACHE": "/home/prad/.go/pkg/mod",
      }
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"],
      "enabled": false,
      "environment": {
        "GITHUB_TOKEN": "$(gh auth token)"
      }
    },
  }
}
