{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cyberdream",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "opencode/code-supernova",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "devbox_": true,
        "mcp_context7": true,
        "mcp_exa": false,
        "mcp_deepgraph": false,
      } 
    },
    "plan": {
      "mode": "primary",
      "model": "opencode/gpt-5-codex",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "mcp_context7": false,
        "mcp_exa": true,
        "mcp_deepgraph": true,
      } 
    },
    "ask": {
      "mode": "primary",
      "model": "cerebras/qwen-3-coder-480b",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "mcp_context7": false,
        "mcp_exa": false,
        "mcp_deepgraph": true,
      } 
    },
  },
  "mcp": {
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.exa.ai/mcp"],
      "enabled": true
    },
    "deepgraph": {
      "type": "local",
      "command": ["npx", "-y", "mcp-code-graph@latest", "sonr-io/sonr"],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  }
}
