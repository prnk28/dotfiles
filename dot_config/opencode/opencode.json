{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "my-local-mcp-server": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "my-mcp-command"
      ],
      "enabled": true,
      "environment": {
        "MY_ENV_VAR": "${env:MY_ENV_VAR}"
      }
    },
    "my-different-local-mcp-server": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "my-other-mcp-command"
      ],
      "enabled": true
    }
  }
}
