{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "cclsp": {
      "type": "local",
      "command": [
        "npx",
        "cclsp@latest"
      ],
      "enabled": true,
      "environment": {
        "CCLSP_CONFIG_PATH": "/Users/prad/.config/claude/cclsp.json"
      }
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/prad/Developer/github.com/sonr-io"
      ],
      "enabled": true,
      "environment": {
        "CCLSP_CONFIG_PATH": "/Users/prad/.config/claude/cclsp.json"
      }
    }
  }
}
