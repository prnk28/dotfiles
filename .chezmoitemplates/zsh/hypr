function _spawnFloat() {
  local cmd="$@"
  local cwd="$PWD"
  exec setsid uwsm app -- alacritty --class="TUI.float" --config-file="$XDG_CONFIG_HOME/alacritty/float.toml" --working-directory="$cwd" -e "$cmd"
}

function _spawnTile() {
  local cmd="$@"
  local cwd="$PWD"
  exec setsid uwsm app -- alacritty --class="TUI.tile" --config-file="$XDG_CONFIG_HOME/alacritty/tile.toml" --working-directory="$cwd" -e "$cmd"
}

alias /cr="_spawnTile claude --continue"
alias /g="_spawnTile gemini"
alias /m="_spawnTile mods"
alias /o="_spawnTile omarchy"
alias dd="_spawnFloat lazydocker"
alias gg="_spawnFloat lazygit"
alias y="_spawnFloat yazi"

alias dd="omarchy-launch-tui-float lazydocker"
alias gg="omarchy-launch-tui-float lazygit"

