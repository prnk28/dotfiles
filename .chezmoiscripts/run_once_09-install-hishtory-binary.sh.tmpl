#!/bin/bash
set -euo pipefail

echo "🔍 Installing hishtory..."

# Check if hishtory is already installed
if command -v hishtory &> /dev/null; then
    echo "✅ hishtory is already installed"
    exit 0
fi

echo "📥 Installing hishtory..."

# Use the standard installation method
curl -fsSL https://hishtory.dev/install.py | python3

echo "✅ hishtory installed successfully!"
