# n8n Configuration
# Copy this file to .env and update with your settings

# Basic Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Security - Set these for production
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Database Configuration
# Options: sqlite, postgresdb, mysqldb, mariadb
DB_TYPE=sqlite
DB_SQLITE_VACUUM_ON_STARTUP=false

# PostgreSQL Configuration (if DB_TYPE=postgresdb)
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n

# Execution Mode
# regular: All workflows run in single process
# queue: Workflows run in separate worker processes
EXECUTIONS_MODE=regular
EXECUTIONS_PROCESS=main

# Timezone
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/

# Additional Features
N8N_METRICS=false
N8N_VERSION_NOTIFICATIONS_ENABLED=true
N8N_DIAGNOSTICS_ENABLED=false

# Encryption key for credentials (generate with: openssl rand -hex 32)
# N8N_ENCRYPTION_KEY=