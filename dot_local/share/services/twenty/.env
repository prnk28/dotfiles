# Twenty CRM Configuration

# Basic Configuration
TWENTY_PORT=3000
SERVER_URL=http://localhost:3000

# IMPORTANT: Generate this secret before first run
# Run: openssl rand -base64 32
APP_SECRET=

# Database Configuration (uses environment variable)
# This will use the TWENTY_DATABASE_URL from your environment
TWENTY_DATABASE_URL=${TWENTY_DATABASE_URL}

# Redis Configuration
REDIS_URL=redis://redis:6379

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=.local-storage

# Telemetry
TELEMETRY_ENABLED=false

# Authentication Settings
AUTH_PASSWORD_ENABLED=true

# Google OAuth (optional)
AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=
AUTH_GOOGLE_CALLBACK_URL=

# Email Configuration
EMAIL_DRIVER=logger

# Frontend Configuration
REACT_APP_SERVER_BASE_URL=http://localhost:3000

# Workspace Configuration
WORKSPACE_INACTIVE_DAYS_BEFORE_DELETION=30
IS_BILLING_ENABLED=false

# Database Migration
ENABLE_DB_MIGRATIONS=true