# Twenty CRM Configuration
# Copy this file to .env and update with your settings

# Basic Configuration
TWENTY_PORT=3000
SERVER_URL=http://localhost:3000

# IMPORTANT: Generate a unique secret with: openssl rand -base64 32
APP_SECRET=your_secret_key_here

# Database Configuration (REQUIRED)
# This should point to your PostgreSQL database
# Format: postgres://username:password@host:port/database
TWENTY_DATABASE_URL=postgres://twenty:twentypassword@postgres:5432/twenty

# Redis Configuration (optional, but recommended for performance)
REDIS_URL=redis://redis:6379

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=.local-storage

# Telemetry (set to false to disable)
TELEMETRY_ENABLED=false

# Authentication Settings
AUTH_PASSWORD_ENABLED=true

# Google OAuth (optional)
AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=
AUTH_GOOGLE_CALLBACK_URL=

# Email Configuration (optional)
EMAIL_FROM_ADDRESS=
EMAIL_FROM_NAME=Twenty
EMAIL_SYSTEM_ADDRESS=
EMAIL_DRIVER=logger
# SMTP settings (if EMAIL_DRIVER=smtp)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=

# Frontend Configuration
REACT_APP_SERVER_BASE_URL=http://localhost:3000

# Workspace Configuration
WORKSPACE_INACTIVE_DAYS_BEFORE_DELETION=30
IS_BILLING_ENABLED=false

# Database Migration
ENABLE_DB_MIGRATIONS=true